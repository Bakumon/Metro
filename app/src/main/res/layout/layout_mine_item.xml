<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="13dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="13dp">

    <ImageView
        android:id="@+id/iv_setting_tab_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="bottom"
            android:singleLine="true"
            android:textColor="@color/colorSettingTabTitle"
            android:textSize="@dimen/settingTabTitle"
            android:textStyle="bold"
            tools:text="title" />

        <TextView
            android:id="@+id/tv_setting_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:singleLine="true"
            android:textColor="@color/colorSettingTabSubTitle"
            android:textSize="@dimen/settingTabSubTitle"
            tools:text="subTitle" />
    </LinearLayout>
</LinearLayout>
